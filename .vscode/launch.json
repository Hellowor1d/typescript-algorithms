    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "ts-node debug current ts",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/${relativeFile}"
            ],
        },
        
        {
            "type": "node",
            "request": "launch",
            "name": "js map debug current ts",
            "program": "${workspaceFolder}/${relativeFile}",
            "preLaunchTask": "tsc: watch - tsconfig.json",//开启调试前，监听文件变化，实时编译，使调试到的 js map 为最新的 ts 代码
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}